<body>
    <header>
        <!-- place navbar here -->
    </header>
    <main>

        <div id="form" class="d-flex flex-column justify-content-center align-items-center ">
            <h1>Login</h1>

            <form action="/loginchk" method="post" class="w-50 mt-5">

                <div class="form-floating mb-3">
                    <input type="text" class="form-control border-success" name="name" id="formId1" placeholder="" />
                    <label for="formId1">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control border-success" name="pass" id="formId1" placeholder="" />
                    <label for="formId1">Password</label>
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <button type="submit" class="btn btn-outline-success " style=" width: 35%">
                        Login
                    </button>
                    <a href="/" class="mt-3">Don't have an account. Click Here!</a>
                </div>

            </form>

        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
